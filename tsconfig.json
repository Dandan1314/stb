{
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "./src/template/**/*",
        "./src/package/**/*"
    ],
    "compilerOptions": {
        "outDir": "./dist/js",
        "noImplicitAny": false,
        "sourceMap": true,
        "module": "commonjs",
        "target": "es5",
        "allowJs": true,
        "downlevelIteration": true,
        "jsx": "react",
        "lib": [
            "es2015.promise",
            "dom",
            "es2015"
        ],
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "stb/*": [
                "src/framework/*"
            ],
            "@/*": [
                "src/platform/common/*"
            ]
        }
    },
    "compileOnSave": false,
    "allowJs": false
}