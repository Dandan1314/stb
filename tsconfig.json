{
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "./src/template/**/*",
        "./src/package/**/*"
    ],
    "compilerOptions": {
        "outDir": "./dist/js",
        "noImplicitAny": false,
        "sourceMap": true,
        "module": "commonjs",
        "target": "es5",
        "allowJs": true,
        "downlevelIteration": true,
        "jsx": "react",
        "lib": [
            "es2015.promise",
            "dom",
            "es2015"
        ],
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "stb/*": [
                "src/framework/*"
            ],
            "@key": [
                "src/platform/common/key"
            ],
            "@player": [
                "src/platform/common/player"
            ],
            "@cookie": [
                "src/platform/common/cookie"
            ],
            "@config.tool": [
                "src/platform/common/config.tool"
            ],
            "@config.api": [
                "src/platform/common/config.api"
            ],
            "@config.basic": [
                "src/platform/common/config.basic"
            ]
        }
    },
    "compileOnSave": false,
    "allowJs": false
}